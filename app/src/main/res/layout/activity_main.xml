<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#D9536DFE"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/layout_1"
      android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/label1"
            android:layout_width="match_parent"
            android:text="Email"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label1"
            android:padding="6dp"

            />

        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:text="Password"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="20sp"
            android:layout_below="@+id/email"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label2"
            android:padding="6dp"
            />


        <Button
            android:id="@+id/signinbutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="SIGN IN"
            android:layout_marginTop="20dp"
            android:layout_below="@id/password"
            />

        <TextView
            android:id="@+id/forgotpassowrd"
            android:layout_width="wrap_content"
            android:text="FORGOT PASSWORD ?"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/signinbutton"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/joinnow"
            android:layout_width="wrap_content"
            android:text="JOIN NOW"

            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:padding="6dp"
            android:textSize="15sp"

            android:layout_below="@+id/signinbutton"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <ImageView
            android:id="@+id/icon_tick"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_tick"

            />

        <TextView
            android:id="@+id/label_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_tick"
            android:text="Login Succesful"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"

            />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_success"
            android:layout_margin="20dp"
             android:text="Logout"
            />


    </RelativeLayout>







</RelativeLayout>